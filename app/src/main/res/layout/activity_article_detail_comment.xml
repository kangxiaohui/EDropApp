<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#32BA88" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_green">
        <ImageView
            android:layout_marginLeft="@dimen/size_10"
            android:id="@+id/article_comment_back"
            android:layout_width="@dimen/size_30"
            android:layout_height="@dimen/size_30"
            android:layout_gravity="center_vertical"
            android:src="@drawable/whiteleft" />
        <TextView
            android:layout_marginRight="@dimen/size_40"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="评 论 页 面"
            android:textColor="#E6E6FA"
            android:textSize="20sp" />
    </LinearLayout>
    <ListView
        android:layout_marginRight="@dimen/size_10"
        android:layout_marginLeft="10dp"
        android:id="@+id/article_comment_lv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/size_10"
        android:layout_marginRight="@dimen/size_10"
        android:layout_marginTop="@dimen/size_10"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/et_article_comment"
            android:layout_width="0dp"
            android:theme="@style/MyEditText"
            android:textCursorDrawable="@drawable/cursor_style"
            android:layout_weight="4"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/btn_article_comment"
            android:background="#7FFFAA"
            android:text="发送"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/size_5"/>
    </LinearLayout>
</LinearLayout>