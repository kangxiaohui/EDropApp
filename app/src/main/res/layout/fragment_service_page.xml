<?xml version="1.0" encoding="utf-8"?><!--标签项对应的页面布局文件-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_service_what"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_20"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/size_40"
            android:layout_marginTop="@dimen/size_50"
            android:text="什么是易扔？"
            android:textColor="@android:color/holo_green_light" />

        <Button
            android:id="@+id/btn_service_reservation"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/reservation_logo" />
    </LinearLayout>

    <!--底部功能标签-->
    <LinearLayout
        android:layout_marginTop="@dimen/size_40"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/size_10"
        android:layout_marginRight="@dimen/size_10"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_100"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/ll_service_myorders"
                android:layout_width="@dimen/size_0"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="@dimen/size_45"
                    android:layout_height="@dimen/size_45"
                    android:src="@drawable/myorder"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的订单"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/size_18"
                    android:layout_marginTop="@dimen/size_5"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_service_wallet"
                android:layout_width="@dimen/size_0"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="@dimen/size_45"
                    android:layout_height="@dimen/size_45"
                    android:src="@drawable/qianbao"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的钱包"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/size_18"
                    android:layout_marginTop="@dimen/size_5"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_service_ticket"
                android:layout_width="@dimen/size_0"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="@dimen/size_45"
                    android:layout_height="@dimen/size_45"
                    android:src="@drawable/youhuiquan"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="优惠券"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/size_18"
                    android:layout_marginTop="@dimen/size_5"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/size_50"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_100"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/ll_service_kefu"
                android:layout_width="@dimen/size_0"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="@dimen/size_45"
                    android:layout_height="@dimen/size_45"
                    android:src="@drawable/mykefu"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="客服"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/size_18"
                    android:layout_marginTop="@dimen/size_5"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_service_share"
                android:layout_width="@dimen/size_0"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="@dimen/size_45"
                    android:layout_height="@dimen/size_45"
                    android:src="@drawable/share"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分享"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/size_18"
                    android:layout_marginTop="@dimen/size_5"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_service_info"
                android:layout_width="@dimen/size_0"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="@dimen/size_45"
                    android:layout_height="@dimen/size_45"
                    android:src="@drawable/shuoming"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="说明"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/size_18"
                    android:layout_marginTop="@dimen/size_5"/>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>






