<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="@dimen/size_50"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/confirm_head">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="46dp"
            android:textSize="18sp"
            android:textColor="#fff"
            android:text="提示"/>
    </RelativeLayout>
    <RelativeLayout
        android:background="@mipmap/message_content"
        android:layout_width="300dp"
        android:layout_height="@dimen/size_70">
        <TextView
            android:id="@+id/tv_content"
            android:lineSpacingExtra="@dimen/size_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="系统检测到您尚未连接网络，请到设置中进行网络设置，是否跳转？"
            android:textColor="#1a1a1a"
            android:textSize="15sp"/>
    </RelativeLayout>
    <View
        android:layout_width="300dp"
        android:layout_height="0.5dp"
        android:background="#B0C4DE" />
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_submit"
            android:layout_width="149dp"
            android:layout_height="match_parent"
            android:background="@drawable/button_msg_submit"/>
        <View
            android:layout_width="2dp"
            android:layout_height="@dimen/size_48"
            android:background="#B0C4DE" />
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="149dp"
            android:layout_height="match_parent"
            android:background="@drawable/button_msg_cancel"/>
    </LinearLayout>
</LinearLayout>