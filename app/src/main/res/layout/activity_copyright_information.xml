<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <View
        android:background="@color/color_green"
        android:layout_width="match_parent"
        android:layout_height="20dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_green">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="版权信息"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/iv_copyright_finish"
            android:layout_width="@dimen/size_30"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/whiteleft" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="@dimen/size_10"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:text="版权信息"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#3D3D3D"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="@dimen/size_5"
            android:layout_marginLeft="@dimen/size_5"
            android:text="易扔（EDrop） Copyright 2019-现在，de_dust2小组"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="@dimen/size_10"
            android:layout_marginBottom="@dimen/size_10"
            android:text="感谢以下开源作者:"
            android:textColor="#3D3D3D"
            android:textSize="@dimen/size_18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:lineSpacingExtra="@dimen/size_10"
                android:text="@string/openSource"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </ScrollView>
    </LinearLayout>
</LinearLayout>